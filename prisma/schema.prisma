datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model machine {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  status   String   @default("Disponible")
}

model flightPlan {
  id                  Int      @id @default(autoincrement())
  customName          String
  status              String
  fileContent         String
  csvResult           String?
  createdAt           DateTime @default(now())
  machineAssignedName String?
}

model csvResult {
  id        Int    @id @default(autoincrement())
  csvResult String
}

model user {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  createdAt DateTime @default(now())
}
